meta {
  name: 01 - Rate Limiting Test
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/webhook/chat
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  X-API-Key: {{apiKey}}
}

body:json {
  {
    "message": "Test rate limit - request number",
    "sessionId": "test-ratelimit-001",
    "userEmail": "test@example.com"
  }
}

tests {
  test("Status is 200 or 429", function() {
    expect([200, 429]).to.include(res.status);
  });
  
  test("If rate limited, has retry info", function() {
    if (res.status === 429) {
      expect(res.body).to.have.property('retryAfter');
      expect(res.body).to.have.property('rateLimitRemaining');
      expect(res.body.rateLimitRemaining).to.equal(0);
    }
  });
}

docs {
  # Rate Limiting Test
  
  Run this request 11 times quickly to test rate limiting.
  
  - Requests 1-10 should return 200 OK
  - Request 11 should return 429 Too Many Requests
  
  Use the "Run Multiple Times" feature or Bruno CLI to automate this.
}
