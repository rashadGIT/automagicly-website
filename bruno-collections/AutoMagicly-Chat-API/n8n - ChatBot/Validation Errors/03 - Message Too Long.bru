meta {
  name: 03 - Message Too Long
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/webhook/chat
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  X-API-Key: {{apiKey}}
}

body:json {
  {
    "message": "{{longMessage}}",
    "sessionId": "test-toolong-001"
  }
}

script:pre-request {
  const longMessage = "a".repeat(5001);
  
  bru.setEnvVar("longMessage", longMessage);
}

tests {
  test("Status is 400", function() {
    expect(res.status).to.equal(400);
  });
  
  test("Response has error", function() {
    expect(res.body).to.have.property('error');
  });
}
