meta {
  name: 02 - PATCH Invalid Status
  type: http
  seq: 2
}

patch {
  url: {{auditBaseUrl}}/api/reviews
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Origin: {{auditBaseUrl}}
}

body:json {
  {
    "id": "test-review-id",
    "status": "invalid_status_value"
  }
}

docs {
  Tests that PATCH requests with invalid status values are rejected.
  Expected: 400 or 403 status (auth required first)
}

tests {
  test("Status is 400 or 403", function() {
    expect([400, 403]).to.include(res.status);
  });

  test("Response has error", function() {
    expect(res.body).to.have.property('error');
  });
}
