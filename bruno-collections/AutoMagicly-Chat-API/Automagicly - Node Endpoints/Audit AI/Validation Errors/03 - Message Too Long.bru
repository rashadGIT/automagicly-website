meta {
  name: 03 - Message Too Long
  type: http
  seq: 3
}

post {
  url: {{auditBaseUrl}}/api/audit/message
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  Origin: {{auditBaseUrl}}
}

body:json {
  {
    "sessionId": "{{auditSessionId}}",
    "message": "{{longMessage}}"
  }
}

vars:pre-request {
  longMessage: {{Array(2100).fill('a').join('')}}
}

tests {
  test("Status is 400", function() {
    expect(res.status).to.equal(400);
  });
  
  test("Response has error about length", function() {
    expect(res.body).to.have.property('error');
  });
}
