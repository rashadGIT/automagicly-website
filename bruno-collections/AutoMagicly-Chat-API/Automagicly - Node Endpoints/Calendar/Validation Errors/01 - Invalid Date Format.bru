meta {
  name: 01 - Invalid Date Format
  type: http
  seq: 1
}

get {
  url: {{auditBaseUrl}}/api/calendar/availability?start=invalid-date&end=2026-02-01&timezone=America/New_York
  auth: none
}

headers {
  Origin: {{auditBaseUrl}}
}

docs {
  Tests that invalid date formats are rejected.
  Expected: 400 status with validation error details
}

tests {
  test("Status is 400", function() {
    expect(res.status).to.equal(400);
  });

  test("Response has error", function() {
    expect(res.body).to.have.property('error');
    expect(res.body.error).to.include('Invalid');
  });

  test("Response has details", function() {
    expect(res.body).to.have.property('details');
  });
}
